<tr>
  <td class="btn-actions text-center non-break-line">
    <div class="no-wrap">
      <%= link_to [:admin, patient], class: "btn-destroy", method: :delete,
        data: {confirm: "Xác nhận xóa bệnh nhân: \"#{patient.name}\" khỏi hệ thống?"}, title: "Xóa" do %>
        <i class="material-icons">delete_forever</i>
      <% end %>
      <%= link_to [:edit, :admin, patient], class: "btn-edit", title: "Chỉnh sửa" do %>
        <i class="material-icons">mode_edit</i>
      <% end %>
    </div>
  </td>
  <td><%= patient.id %></td>
  <td><%= patient.name %></td>
  <td><%= patient.display_gender %></td>
  <td class="non-break-line"><%= patient.birthday %></td>
  <td><%= patient.display_blood_type %></td>
  <td><%= patient.pathological %></td>
  <td><%= patient.department_name %></td>
  <td><%= patient.room_number %></td>
  <td><%= patient.department_head_doctor %></td>
  <td class="non-break-line"><%= format_phone_number patient.phone_number %></td>
  <td class="non-break-line"><%= format_phone_number patient.phone_number_2 %></td>
  <td><%= patient.address %></td>
  <td><%= patient.place_of_birth %></td>
  <td><%= patient.history_of_pathology %></td>
  <td><%= patient.description %></td>
  <td class="btn-actions text-center non-break-line">
    <div class="no-wrap">
      <%= link_to [:edit, :admin, patient], class: "btn-edit", title: "Chỉnh sửa" do %>
        <i class="material-icons">mode_edit</i>
      <% end %>
      <%= link_to [:admin, patient], class: "btn-destroy", method: :delete,
        data: {confirm: "Xác nhận xóa bệnh nhân: \"#{patient.name}\" khỏi hệ thống?"}, title: "Xóa" do %>
        <i class="material-icons">delete_forever</i>
      <% end %>
    </div>
  </td>
</tr>
