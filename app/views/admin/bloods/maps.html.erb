<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title "Bản Đồ Hiến Máu" %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= stylesheet_link_tag "material/material-dashboard.css", media: "all" %>
    <%= stylesheet_link_tag "admin/main", media: "all" %>
    <%= stylesheet_link_tag "customize_alert.css", media: "all" %>
    <%= stylesheet_link_tag "customize_checkboxes.css", media: "all" %>
    <link rel="icon" href="<%= asset_path "favicon.ico" %>" type="image/x-icon">
  </head>
  <body>
    <%= javascript_include_tag "common_constants" %>
    <div class="wrapper">
      <%= render "layouts/admin_sidebar" %>
      <div class="main-panel">
        <nav class="navbar navbar-transparent navbar-absolute" id="nav-bar-map">
          <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <%= link_to "Xem Danh Sách", admin_bloods_path + "?" + request.query_string,
                class: "btn btn-primary no-margin" %>
            </div>
            <div class="collapse navbar-collapse">
              <ul class="nav navbar-nav navbar-right">
                <li>
                  <%= link_to root_path do %>
                    <i class="material-icons">home</i>
                    <p class="hidden-lg hidden-md">Home</p>
                  <% end %>
                </li>
                <li class="dropdown">
                  <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
                   <i class="material-icons">person</i>
                   <p class="hidden-lg hidden-md">Profile</p>
                 <% end %>
                 <ul class="dropdown-menu">
                   <li id="login-info" class="text-center">
                     <%= link_to "#", class: "active normal-text" do %>
                       Đang đăng nhập dưới tên:<br>
                       <b><%= current_user.try :email %></b>
                     <% end %>
                   </li>
                   <li><%= link_to "Trang Chủ", root_path %></li>
                   <li><%= link_to "Trang Cá Nhân", profile_path %></li>
                   <li><%= link_to "Cài Đặt", edit_profile_path %></li>
                   <hr class="dropdown-menu-seperator">
                   <li><%= link_to "Thoát", destroy_user_session_path, method: :delete %></li>
                 </ul>
                </li>
              </ul>
              <div id="nav-filter-form">
                <%= render "map_filter_form", form: @form, q: @q, radius: @radius,
                  users: @users, center: @center %>
              </div>
            </div>
          </div>
        </nav>
        <div id="map" style="position: relative; overflow: hidden;"></div>
      </div>
    </div>

    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "material/material.min.js" %>
    <%= javascript_include_tag "material/material-dashboard.js" %>
    <%= javascript_include_tag "admin/main" %>
    <script type="text/javascript">
      <%= render "shared/notify.js" %>
      <%= render "shared/submit_selectbox.js" %>
      <%= render "maps.js", users: @users %>
      <%= render "scroll_x.js" %>
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA5WpyjImkemkAiHkeZQYqHEc5ybF0uIIg&libraries=places"></script>
  </body>
</html>
