$("#user-history-form").html("<%= j render "admin/histories/user_history_form", user: @user, user_form: @user_form, history_form: @history_form, patients: @patients %>");
var min_age = 18;
var max_age = 50;
var birthday_picker = initialize_date_picker(".date-picker");
birthday_picker.data("DateTimePicker").maxDate(moment().subtract(min_age, "years"));
birthday_picker.data("DateTimePicker").minDate(moment().subtract(max_age, "years"));
birthday_picker.data("DateTimePicker").viewMode("years");

if (isEmptyAddress()) {
  initialize_locationpicker();
  try_current_position();
} else {
  $(".toggle-maps").addClass("show-maps");
  $(".toggle-maps").on("click", function() {
    return false;
  });
}

$("#history-form-anchor").removeClass("hidden");
$(".btn-show-form").remove();

function isEmptyAddress() {
    return !$(".user-address").val();
}

<%= render "shared/new_history_common.js" %>

updatePatientOptions();
