<div class="card card-profile">
  <div class="card-avatar">
    <%= link_to user do %>
      <%= avatar_for user %>
    <% end %>
  </div>
  <div class="content">
    <h6 class="category text-gray"><%= user.role.upcase %></h6>
    <%= link_to user do %>
      <h4 class="card-title"><%= user.name&.titleize %></h4>
    <% end %>
    <p class="card-content">
      Đăng nhập lần cuối vào lúc: <span class="non-break-line"><%= user.current_sign_in_at %></span><br>
      Tại địa chỉ: <span class="non-break-line"><%= user.current_sign_in_ip %></span><br>
      Số lần đăng nhập: <%= user.sign_in_count %>
    </p>
  </div>
</div>
