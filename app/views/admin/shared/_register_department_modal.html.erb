<div class="modal fade in" id="register-department-modal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          <i class="material-icons">clear</i>
        </button>
        <h4 class="modal-title">Đăng ký khoa điều trị</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-6">
            <div class="form-group label-floating">
              <%= label_tag :place_id, "Bệnh Viện", class: "control-label" %>
              <%= select_tag :place_id, options_from_collection_for_select(places, :id, :name), {include_blank: :"--- Chọn một bệnh viện ---", class: "form-control select2", id: "place-selectbox"} %>
            </div>
            <p>
              <small>Chưa có bệnh viện? <a href="javascript:void(0);" class='register-place'><strong>Thêm mới</strong></a></small>
            </p>
          </div>
          <div class="col-md-6" id="department-section"></div>
        </div>
        <div class="row" id="place-department-section"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
      </div>
    </div>
  </div>
</div>
