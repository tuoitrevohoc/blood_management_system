<div class="sidebar" data-active-color="purple" data-image="">
  <div class="logo">
    <%= image_tag asset_url("favicon.ico"), class: "img logo-image" %>
    <%= link_to "Hiểu và Thương", admin_root_path, class: "simple-text" %>
  </div>
  <div class="sidebar-wrapper">
    <ul class="nav">
      <li class="<%= active_class admin_bloods_path %>">
        <%= link_to admin_bloods_path do %>
          <i class="material-icons">search</i>
          <p>Tìm Kiếm Nguồn Máu</p>
        <% end %>
      </li>
      <li class="<%= active_class admin_histories_path %>">
        <%= link_to "#history-sub-menu", class: "collapsed", data: {toggle: "collapse"}, aria: {expanded: false} do %>
          <i class="material-icons">history</i>
          <p>
            Lịch sử hiến máu
            <b class="caret"></b>
          <p>
        <% end %>
        <div class="collapse" id="history-sub-menu" aria-expanded="false" style="height: 0px;">
          <ul class="nav">
            <li>
              <%= link_to [:new, :admin, :history] do %>
                <i class="material-icons">add</i>
                <p>Thêm mới<p>
              <% end %>
            </li>
            <li>
              <%= link_to [:admin, :histories] do %>
                <i class="material-icons">list</i>
                <p>Danh sách<p>
              <% end %>
            </li>
          </ul>
        </div>
      </li>

      <li class="<%= active_class admin_events_path %>">
        <%= link_to admin_events_path do %>
            <i class="material-icons">event</i>
            <p>Sự Kiện</p>
        <% end %>
      </li>
      <li class="<%= active_class admin_articles_path %>">
        <%= link_to admin_articles_path do %>
            <i class="material-icons">content_paste</i>
            <p>Tin Tức - Bài Viết</p>
        <% end %>
      </li>
      <li class="<%= active_class admin_administrator_accounts_path %>">
        <%= link_to admin_administrator_accounts_path do %>
            <i class="material-icons">people</i>
            <p>Tài Khoản</p>
        <% end %>
      </li>
    </ul>
  </div>
</div>
