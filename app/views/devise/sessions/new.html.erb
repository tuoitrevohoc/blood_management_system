<% provide :title, "Đăng Nhập" %>

<%= render "layouts/banner", banner_text: nil %>

<section id="courseArchive">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <img src="<%= asset_path "logo_600.png" %>" alt="Logo" class="img-responsive page-logo">
      </div>
      <div class="col-md-4">
        <h2 class="text-center">Đăng Nhập</h2>
        <%= form_for resource, as: resource_name, url: session_path(resource_name),
          html: {class: "wp-form"} do |f| %>
          <%= f.email_field :email, class: "form-control wpcf7-email",
            autofocus: true, placeholder: "Email" %>
          <%= f.password_field :password, class: "form-control wpcf7-text",
            autocomplete: "off", placeholder: "Mật khẩu" %>
          <div class="col-md-12">
            <div class="row login-bottom">
              <div class="remember-login">
                <% if devise_mapping.rememberable? %>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, "Tự động đăng nhập lần sau" %>
                <% end %>
              </div>
              <%= f.submit "Đăng Nhập", class: "wpcf7-submit pull-right" %>
            </div>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
