<% provide :title, "Đăng Ký Thành Viên" %>
<% provide :keywords, "Dang Ky, Dang ky hien mau" %>
<% provide :description, "Đăng ký là thành viên của CLB Máu Nóng Hiểu Và Thương" %>

<%= render "layouts/banner", banner_text: nil %>

<section id="courseArchive">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <img src="<%= asset_path "logo_600.png" %>" alt="Logo" class="img-responsive page-logo">
      </div>
      <div class="col-md-4">
        <h2 class="text-center">Đăng Ký Tài Khoản</h2>
        <%= form_for resource, as: resource_name, url: registration_path(resource_name),
          format: :html, html: {class: "wp-form"} do |f| %>
          <%= devise_error_messages! %>
          <%= f.email_field :email, class: "form-control wpcf7-email", placeholder: "Email" %>
          <%= f.password_field :password, class: "form-control wpcf7-text",
            autocomplete: "off", placeholder: "Mật khẩu" %>
          <%= f.password_field :password_confirmation, class: "form-control wpcf7-text",
            autocomplete: "off", placeholder: "Xác nhận lại mật khẩu" %>
          <div class="col-md-12">
            <div class="row login-bottom">
              <%= f.submit "Đăng Ký", class: "wpcf7-submit pull-right" %>
            </div>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
