<% provide :title, "Liên Hệ" %>
<% provide :description, "Thông tin liên hệ của CLB Hiểu và Thương" %>

<%= render "layouts/banner", banner_text: "" %>
<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-12">
        <div class="title_area">
          <h2 class="title_two">Liên Hệ</h2>
          <span></span>
          <p>
            Mọi ý kiến đóng góp, cung cấp thông tin, hỗ trợ đóng góp đều được chúng tôi hoan nghênh.
            <br>Vui lòng để lại thông tin liên hệ của bạn, chúng tôi sẽ phản hồi trong thời gian sớm nhất.
          </p>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-offset-1 col-lg-6 col-md-6 col-sm-6">
        <div class="contact_form wow fadeInLeft">
          <%= form_tag contact_path, class: "submitphoto_form contact-form wp-form" do %>
            <%= text_field_tag "contact[name]", nil, class: "form-control wpcf7-text",
              placeholder: "Họ và tên", required: true %>
            <%= email_field_tag "contact[email]", nil, class: "form-control wpcf7-email",
              placeholder: "Địa chỉ email", required: true %>
            <%= text_field_tag "contact[subject]", nil, class: "form-control wpcf7-text",
              placeholder: "Tiêu đề", required: true %>
            <%= text_area_tag "contact[content]", nil, class: "form-control wpcf7-textarea",
              placeholder: "Ý kiến của bạn...", required: true  %>
            <%= submit_tag "Gửi", class: "wpcf7-submit" %>
          <% end %>
        </div>
      </div>
      <div class="col-lg-5 col-md-5 col-sm-5">
        <div class="contact_address wow fadeInRight">
          <h3>Thông tin liên hệ</h3>
          <div class="address_group">
            <table class="table-contact">
              <tr>
                <td>Email:</td>
                <td>
                  <a href="mailto:clbhieuvathuong1981@gmail.com?Subject=[CLB Hieu Va Thuong]" target="_top">
                    clbhieuvathuong1981@gmail.com
                  </a>
                </td>
              </tr>
              <tr>
                <td>Hotline:</td>
                <td>0934 782 006</td>
              </tr>
              <tr>
                <td>Địa chỉ:</td>
                <td>
                  Đường Mai Đăng Chơn<br>
                  Quận Ngũ Hành Sơn, Tp. Đà Nẵng
                </td>
              </tr>
            </table>
          </div>
          <div class="address_group">
            <ul class="footer_social">
              <li><a href="https://www.facebook.com/groups/HieuVaThuongDaNang" class="soc_tooltip" title="" data-placement="top" data-toggle="tooltip" data-original-title="Facebook"><i class="fa fa-facebook"></i></a></li>
              <li><a href="#" class="soc_tooltip" title="" data-placement="top" data-toggle="tooltip" data-original-title="Twitter"><i class="fa fa-twitter"></i></a></li>
              <li><a href="#" class="soc_tooltip" title="" data-placement="top" data-toggle="tooltip" data-original-title="Google+"><i class="fa fa-google-plus"></i></a></li>
              <li><a href="#" class="soc_tooltip" title="" data-placement="top" data-toggle="tooltip" data-original-title="Linkedin"><i class="fa fa-linkedin"></i></a></li>
              <li><a href="#" class="soc_tooltip" title="" data-placement="top" data-toggle="tooltip" data-original-title="Youtube"><i class="fa fa-youtube"></i></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
